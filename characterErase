#include <stdio.h>
#include <windows.h>
#include <conio.h>

int x=25,y=10;

void gotoxy(int x, int y) {
	COORD Pos={x,y};
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE),Pos);
}

void draw(int x, int y,int s) {
	gotoxy(x, y);
	if (s==1) { printf("(@Ï‰@ )");}
	else {printf("%7s","");}
}


void move(char k) {
	draw(x,y,0);
	switch(k) {
		case 'w': y--; break;
		case 's': y++; break;
		case 'a': x--; break;
		case 'd': x++; break;
	}
	if(y<0) { y=0; }
	if(x<0) { x=0; }

	draw(x, y,1);
	 
}

int main() {
	system("mode con lines=25 cols=50 | title=GAME");
	
	draw(x,y,1);
	
	while(1) {
		if(kbhit()) {
			move( getch() );
		}
		Sleep(100);
	}
	
	return 0;
}






